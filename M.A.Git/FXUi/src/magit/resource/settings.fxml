<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="250.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.screen.popups.SettingsController">
   <top>
      <Label alignment="CENTER" text="%FX_MAGIT_SETTINGS" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox centerShape="false" minWidth="400.0" scaleShape="false">
         <children>
            <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="50.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="%FX_SETTINGS_STYLE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="styleHint" text="(?)">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <ChoiceBox fx:id="styleChoiceBox" prefWidth="150.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="50.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="%FX_SETTINGS_LANE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="languagesHint" text="(?)">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <ChoiceBox fx:id="languageChoiceBox" prefWidth="150.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <Button fx:id="saveButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSaveButton_Click" prefWidth="100.0" styleClass="primaryButton" text="%FX_BUTTON_SAVE" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Button>
   </bottom>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</BorderPane>
